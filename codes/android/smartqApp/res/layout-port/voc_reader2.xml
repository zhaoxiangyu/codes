<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#ff000000"
    >
	<RelativeLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
    	android:background="#ff000000"
	    >
    	<FrameLayout android:id="@+id/wordDisplayOptions"
	   	    android:layout_width="wrap_content"  
	        android:layout_height="wrap_content"
	        android:layout_marginRight="1dip"
        />
		<FrameLayout android:id="@+id/playOptions"
	        android:layout_alignTop="@id/wordDisplayOptions"
	        android:layout_alignBottom="@id/wordDisplayOptions"
	        android:layout_toRightOf="@id/wordDisplayOptions"
	   	    android:layout_width="wrap_content"  
	        android:layout_height="wrap_content"
    		android:layout_marginRight="1dip"
		    />
		<FrameLayout android:id="@+id/helpPane"
	        android:layout_alignTop="@id/wordDisplayOptions"
	        android:layout_alignBottom="@id/wordDisplayOptions"
	        android:layout_alignParentRight="true"
	   	    android:layout_width="wrap_content"  
	        android:layout_height="wrap_content"
    		android:layout_marginRight="1dip"
		    />
	</RelativeLayout>
   	
   	<TextView 
   	    android:layout_weight="1.0"
   	    android:id="@+id/text_playing"
   	    android:layout_width="fill_parent"
        android:layout_height="wrap_content"
	    android:text="Media file name here"
	    android:padding="3dip"
    	android:background="#ff000000"
	    />
   	
   	<LinearLayout android:background="#ff777777"
   	    android:layout_width="fill_parent"
   	    android:layout_height="wrap_content">
	   	<org.sharp.android.widget.WritingPane 
	   	    android:id="@+id/writingPane"
		    android:layout_width="fill_parent"
		    android:layout_height="150dip"
		    android:padding="1dip"
		    android:layout_margin="1dip"
		    android:background="#ff000000"
	   	 	/>
		<ImageView 
		    android:id="@+id/handwriting_picture"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
	    	android:background="#ff000000"
		    />
	</LinearLayout>
	
   	<FrameLayout android:id="@+id/naviFrame"
   	    android:layout_width="fill_parent"  
        android:layout_height="wrap_content"
    	android:background="#ff000000"
    	android:layout_marginTop="1dip"
       />

	<FrameLayout android:id="@+id/levels"
   	    android:layout_width="fill_parent"  
        android:layout_height="wrap_content"
    	android:background="#ff000000"
        />
   	    
	<RelativeLayout
   	    android:layout_width="fill_parent"
   		android:layout_height="wrap_content"
	    android:orientation="horizontal"
    	android:background="#ff000000"
   		>
		<!-- 
		<TextView android:id="@+id/freePoints"
	   	    android:layout_width="wrap_content"  
	        android:layout_height="wrap_content"
	    	android:background="#ff000000"
		    />
		 -->
    	<FrameLayout android:id="@+id/pointsFrame"
	   	    android:layout_width="wrap_content"  
	        android:layout_height="wrap_content"
	    	android:background="#ff000000"
        />
    	<FrameLayout android:id="@+id/alipayFrame"
	   	    android:layout_width="wrap_content"  
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	    	android:background="#ff000000"
        />
   	</RelativeLayout>
   	    
	<LinearLayout android:id="@+id/adFrame"
   	 	xmlns:admobsdk="http://schemas.android.com/apk/res/sharpx.vocreader"
   		android:layout_width="fill_parent"
   		android:layout_height="wrap_content"
    	android:background="#ff000000"
   		>
   	</LinearLayout>
 
	<!-- 
   	<include layout="@layout/vr_navi2"/>
	 -->
	<!-- 
		<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
		    android:orientation="horizontal"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    >
		    <include layout="@layout/vr_navi3"/>
		</LinearLayout>
	 -->
</LinearLayout>
