<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:stretchColumns="3" android:layout_height="fill_parent" android:layout_width="fill_parent">
	<TextView android:layout_weight="0.10" android:id="@+id/text_playing"
	    android:text="Media file name here"
	    android:padding="3dip"/>

	<TextView android:layout_weight="0.01" android:id="@+id/text_info"
	    android:text=""
	    android:padding="3dip" />

    <TableRow android:layout_weight="0.01">
        <Button android:id="@+id/levelA"
            android:text="LA"
            android:layout_column="0"
            android:layout_width="50dp"
            android:padding="1dip" />
        <Button android:id="@+id/level0"
            android:text="L0"
            android:layout_column="1"
            android:layout_width="50dp"
            android:padding="1dip" />
        <Button android:id="@+id/level1"
            android:text="L1"
            android:layout_column="2"
            android:layout_width="50dp"
            android:padding="1dip" />
        <Button android:id="@+id/level2"
            android:text="L2"
            android:layout_column="4"
            android:layout_width="50dp"
            android:padding="1dip" />
        <Button android:id="@+id/level3"
            android:text="L3"
            android:layout_column="5"
            android:layout_width="50dp"
            android:padding="1dip" />
        <Button android:id="@+id/level4"
            android:text="L4"
            android:layout_column="6"
            android:layout_width="50dp"
            android:padding="1dip" />
    </TableRow>
    <TableRow android:layout_weight="0.01">
        <ImageButton android:id="@+id/play_head"
            android:src="@android:drawable/ic_media_previous"
            android:layout_width="50dp"
            android:padding="1dip" />
        <ImageButton android:id="@+id/play_previous"
            android:src="@android:drawable/ic_media_rew"
            android:layout_width="50dp"
            android:padding="1dip" />
        <ImageButton android:id="@+id/up_level"
            android:src="@android:drawable/arrow_up_float"
            android:layout_width="50dp"
            android:padding="1dip" />
        <ImageButton android:id="@+id/play_repeat"
            android:src="@android:drawable/ic_media_play"
            android:layout_width="50dp"
            android:padding="1dip" />
        <ImageButton android:id="@+id/down_level"
            android:src="@android:drawable/arrow_down_float"
            android:layout_width="50dp"
            android:padding="1dip" />
        <ImageButton android:id="@+id/play_next"
            android:src="@android:drawable/ic_media_ff"
            android:layout_width="50dp"
            android:padding="1dip" />
        <ImageButton android:id="@+id/play_tail"
            android:src="@android:drawable/ic_media_next"
            android:layout_width="50dp"
            android:padding="1dip" />
    </TableRow>
</TableLayout>
