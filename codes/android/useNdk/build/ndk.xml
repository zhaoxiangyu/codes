<project xmlns:ivy="antlib:org.apache.ivy.ant" name="use-ndk" basedir="..">
	<import file="${basedir}/../AntTask/ant/env-setting.xml" />
	<import file="${basedir}/../AntTask/ant/common-tools.xml" />
	
	<target name="build" depends="clean">
		<cmd line="${script} V=1 NDK_LOG=1"/>
	</target>
	
	<target name="build-verbose">
    	<!-- gnumake debug=a,b,v,i,j,m -->
    	<!-- ndk-build V=1 NDK_LOG=1 -->
		<cmd line="${script} V=1 --debug=j"/>
		<!-- got this -->
		<!-- gcc -IE:\Android\android-ndk-r6b-windows\android-ndk-r6b\platforms\android-5\arch-arm\usr\include -->
	</target>
	
	<target name="rebuild">
		<cmd line="${script} -B"/>
	</target>

	<target name="clean">
		<cmd line="${script} clean"/>
	</target>
	
    <target name="ivy-retrieve" description="retrieve dependencies with ivy">
        <ivy:retrieve organisation="org.apache.httpcomponents" module="httpclient" revision="4.0.1" 
        	inline="true" pattern="lib/httpclient/[type]/[artifact]-[revision].[ext]"/>
    </target>	

</project>