<project xmlns:ivy="antlib:org.apache.ivy.ant" name="kernel" basedir="..">
	<import file="${basedir}/../AntTask/ant/use-android-tools.xml" />
	<import file="${basedir}/build/env-directory.xml" />

	<property file="build/build.properties"/>
	<property environment="env"/>
	
	<target name="console-start">
		<exec executable="cmd.exe" dir="${basedir}">
			<env key="Path" path="${android-sdk-home}/platform-tools;${env.Path}"/>
			<arg line="/c start /I"/>
		</exec>
	</target>

	<target name="emulator-start">
		<emulator-start avd-name="android2.1"/>
    </target>
	
	<target name="adb-help">
		<adb-shell cmd="uname -a"/>
	</target>
	
	<target name="adb-install-busybox">
		<adb-install apk-file="${busybox-apk}"/>
	</target>
</project>