<something-else-entirely>
	<proxool>
		<!-- The name of connection pool -->
		<alias>DBPool</alias>
		<!-- connection url -->
		<driver-url>
		jdbc:oracle:thin:@192.168.1.6:1521:orcl
		</driver-url>
		<!-- 
		<driver-url>
		jdbc:oracle:thin:@11.5.7.182:1521:orcl
		</driver-url>
		 -->
		<!-- jdbc driver name -->
		<driver-class>oracle.jdbc.driver.OracleDriver</driver-class>
		<driver-properties>
			<property name="user" value="nuclear" />
			<property name="password" value="nuclear" />
		</driver-properties>
		<!-- Destory the connection when time is out of the specify second -->
		<house-keeping-sleep-time>90000</house-keeping-sleep-time>
		<!-- the maximum connection number that proxool can create when then request connection number is more than maximum-connection-count -->
		<maximum-new-connections>150</maximum-new-connections>
		<!-- the minimum free connection number that proxool provide -->
		<prototype-count>3</prototype-count>
		<!-- the maximum connection number that proxool provide -->
		<maximum-connection-count>100</maximum-connection-count>
		<!-- the minimum connection number that proxool provide -->
		<minimum-connection-count>3</minimum-connection-count>
	</proxool>
</something-else-entirely>